# The Visible Words AI Art Store - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For local development (SQLite) - recommended for testing
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/ai_art_store?schema=public"
# DIRECT_URL="postgresql://username:password@localhost:5432/ai_art_store?schema=public"

# ========================================
# STRIPE PAYMENT CONFIGURATION
# ========================================
# Get these from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY="sk_test_YOUR_STRIPE_SECRET_KEY_HERE"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE"

# For local testing without real Stripe (use these values for testing only)
# STRIPE_SECRET_KEY="sk_test_fake_key_for_local_testing"
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_fake_key_for_local_testing"

# Webhook secret for verifying Stripe webhook events
# Get this when setting up webhooks in Stripe Dashboard
STRIPE_WEBHOOK_SECRET="whsec_..."

# ========================================
# PRINTIFY INTEGRATION
# ========================================
# Get these from your Printify account (https://printify.com/app/account/api)
PRINTIFY_API_KEY="YOUR_PRINTIFY_API_TOKEN_HERE"

# For local testing without real Printify API (use this value for testing only)
# PRINTIFY_API_KEY="fake_api_key_for_local_testing"

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Base URL for your application (used for redirects and webhooks)
NEXT_PUBLIC_BASE_URL="http://localhost:3000" # Use https://www.thevisiblewords.com for production

# Environment mode
NODE_ENV="development" # or "production"

# ========================================
# OPTIONAL: EMAIL CONFIGURATION
# ========================================
# For sending transactional emails (order confirmations, etc.)
# SMTP_HOST="smtp.your-email-provider.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@domain.com"
# SMTP_PASS="your-email-password"
# FROM_EMAIL="noreply@thevisiblewords.com"

# ========================================
# OPTIONAL: FILE STORAGE
# ========================================
# For storing uploaded images (if not using Printify's storage)
# AWS_ACCESS_KEY_ID="your_aws_access_key"
# AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-s3-bucket-name"

# ========================================
# OPTIONAL: ANALYTICS & MONITORING
# ========================================
# Google Analytics 4
# NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry for error monitoring
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ========================================
# OPTIONAL: SOCIAL LOGIN (if implementing)
# ========================================
# NextAuth.js configuration
# NEXTAUTH_URL="http://localhost:3000" # or your production URL
# NEXTAUTH_SECRET="your-random-secret-key"

# Google OAuth (optional)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth (optional)
# FACEBOOK_CLIENT_ID="your-facebook-app-id"
# FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# ========================================
# DEVELOPMENT TOOLS
# ========================================
# Skip environment variable validation in development
# SKIP_ENV_VALIDATION="true"

# Enable detailed logging in development
# DEBUG="true"

# ========================================
# NOTES
# ========================================
# 1. Never commit your actual .env file to version control
# 2. Use different API keys for development and production
# 3. Keep your webhook secrets secure
# 4. Regularly rotate your API keys for security
# 5. Use strong, unique passwords for your database
#
# For production deployment:
# - Use environment variable management from your hosting provider
# - Enable SSL/TLS for all connections
# - Use read-only database users where possible
# - Monitor your API usage and rate limits