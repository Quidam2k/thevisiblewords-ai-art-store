# Printify Automation System - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# PRINTIFY API CONFIGURATION
# ========================================
# Get these from your Printify account (https://printify.com/app/account/api)
PRINTIFY_ACCESS_TOKEN="your_printify_access_token_here"
PRINTIFY_SHOP_ID="your_printify_shop_id_here"
PRINTIFY_API_URL="https://api.printify.com/v1"

# ========================================
# APPLICATION SETTINGS
# ========================================
# Environment mode
ENVIRONMENT="development"  # or "production"

# Application port (for Gradio interface)
PORT=7860

# Host configuration
HOST="0.0.0.0"  # Use 127.0.0.1 for local only

# ========================================
# FILE PATHS
# ========================================
# Directory for uploading images
UPLOAD_DIR="./uploads"

# Directory for temporary files
TEMP_DIR="./temp"

# Directory for processed files
OUTPUT_DIR="./output"

# Configuration file path
CONFIG_FILE="./config/config.json"

# ========================================
# IMAGE PROCESSING
# ========================================
# Maximum image size (in MB)
MAX_IMAGE_SIZE_MB=10

# Supported image formats (comma-separated)
SUPPORTED_FORMATS="jpg,jpeg,png,webp,gif"

# Image quality for compression (1-100)
IMAGE_QUALITY=95

# Maximum image dimensions
MAX_WIDTH=4000
MAX_HEIGHT=4000

# ========================================
# API RATE LIMITING
# ========================================
# Requests per minute for Printify API
RATE_LIMIT_RPM=600

# Product creation rate limit (per 30 minutes)
PRODUCT_RATE_LIMIT=200

# Delay between API calls (milliseconds)
API_DELAY_MS=100

# ========================================
# LOGGING
# ========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Log file path
LOG_FILE="./logs/automation.log"

# Maximum log file size (MB)
MAX_LOG_SIZE_MB=50

# Number of log files to keep
LOG_BACKUP_COUNT=5

# ========================================
# DATABASE (Optional)
# ========================================
# SQLite database for tracking uploads
# DATABASE_URL="sqlite:///./data/automation.db"

# PostgreSQL for production
# DATABASE_URL="postgresql://user:password@localhost:5432/printify_automation"

# ========================================
# EXTERNAL SERVICES (Optional)
# ========================================
# For enhanced tag generation (if using external AI services)
# OPENAI_API_KEY="your_openai_api_key"
# CLAUDE_API_KEY="your_claude_api_key"

# For image enhancement services
# STABILITY_API_KEY="your_stability_ai_key"
# MIDJOURNEY_API_KEY="your_midjourney_key"

# ========================================
# MONITORING & ANALYTICS (Optional)
# ========================================
# For error tracking
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# For performance monitoring
# DATADOG_API_KEY="your_datadog_api_key"

# For usage analytics
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ========================================
# SECURITY
# ========================================
# Secret key for session management
SECRET_KEY="your-random-secret-key-here"

# API authentication (if enabling API access)
# API_KEY="your-secure-api-key"

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,https://www.thevisiblewords.com"

# ========================================
# ADVANCED SETTINGS
# ========================================
# Enable debug mode
DEBUG="false"

# Enable performance profiling
PROFILING="false"

# Enable experimental features
EXPERIMENTAL="false"

# Maximum concurrent uploads
MAX_CONCURRENT_UPLOADS=3

# Upload timeout (seconds)
UPLOAD_TIMEOUT=300

# ========================================
# BACKUP & RECOVERY
# ========================================
# Backup directory
BACKUP_DIR="./backups"

# Automatic backup interval (hours)
BACKUP_INTERVAL_HOURS=24

# Number of backups to keep
BACKUP_RETENTION_DAYS=30

# ========================================
# NOTES
# ========================================
# 1. Keep your Printify access token secure and never commit it
# 2. Use different configurations for development and production
# 3. Monitor your API usage to avoid rate limits
# 4. Regularly backup your configuration and data
# 5. Test with small batches before running large uploads
#
# For production deployment:
# - Use environment variable management
# - Enable proper logging and monitoring
# - Set up automatic backups
# - Use secure random keys
# - Monitor system resources